# Copy this file to secrets.yaml and fill in your credentials
# ESPHome will automatically use secrets.yaml for your local configuration

# WiFi Configuration
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# API Encryption Key (generate with: esphome secrets generate-api-key)
# Or leave empty for no encryption (less secure)
api_encryption_key: ""

# OTA Update Password (for over-the-air updates)
ota_password: "your-ota-password"

